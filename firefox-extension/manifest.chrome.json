{
  "manifest_version": 3,
  "name": "JS",
  "version": "1.0.0",
  "description": "MV3 manifest for Chrome/Chromium. Review and adapt before packaging.",

  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "downloads",
    "declarativeNetRequest",
    "webRequest",
    "webRequestBlocking"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.compat.js"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "JS Malware Checker",
    "default_popup": "ui/popup.html"
  },

  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    {
      "resources": [
        "ui/blocking.html",
        "ui/blocking.js",
        "ui/popup.html",
        "ui/options.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
