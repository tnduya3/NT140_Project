{
  "manifest_version": 2,
  "name": "JS Malware Hash Checker (Safari copy)",
  "version": "1.0.0",
  "description": "Compatibility manifest for converting this extension to a Safari Web Extension. Review and adapt before packaging.",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "tabs",
    "notifications",
    "downloads",
    "webNavigation"
  ],

  "background": {
    "scripts": [
      "utils/hash-utils.js",
      "utils/hash-db.js",
      "utils/ip-db.js",
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "JS Malware Checker",
    "default_popup": "ui/popup.html"
  },

  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    "ui/blocking.html"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
